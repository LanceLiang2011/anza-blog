---
const getSlugNum = (slug: any): number => {
  return parseInt(slug[slug.length - 1]);
};

const { slug, page } = Astro.props;
---

<footer class="my-6 bg-white rounded-lg shadow dark:bg-gray-800">
  <ul
    class="flex w-full mx-auto p-4 items-center justify-between mt-3 text-md font-medium text-gray-500 dark:text-gray-400"
  >
    {
      getSlugNum(slug) > 1 ? (
        <li>
          <a
            href={`/blog/blog-${getSlugNum(slug) - 1}`}
            class="mr-4 hover:underline md:mr-6"
          >
            Previous Page
          </a>
        </li>
      ) : (
        <li>
          <a href={`/`} class="mr-4 hover:underline md:mr-6">
            Home
          </a>
        </li>
      )
    }
    {
      getSlugNum(slug) < page ? (
        <li>
          <a
            href={`/blog/blog-${getSlugNum(slug) + 1}`}
            class="mr-4 hover:underline md:mr-6"
          >
            Next Page
          </a>
        </li>
      ) : (
        <li>
          <a href={`/`} class="mr-4 hover:underline md:mr-6">
            Home
          </a>
        </li>
      )
    }
  </ul>
</footer>
