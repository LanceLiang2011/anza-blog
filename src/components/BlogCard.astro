---
import { slugify } from "../lib/utils";
interface Props {
  title: string;
  description: string;
  tags: string[];
  slug: string;
  cover: {
    src: string;
    alt: string;
  };
}

const { title, description, tags, slug, cover }: Props = Astro.props;
---

<div
  class="max-w-sm rounded-2xl overflow-hidden shadow-lg block hover:rotate-2 mb-4 mx-auto md:mx-2 lg:mx-4"
>
  <a href={`/blog/${slug}`}
    ><img class="w-full" src={`/${cover.src}`} alt={cover.alt} /></a
  >
  <a href={`/blog/${slug}`} class="px-6 py-4 block">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
      {description.slice(0, 180)}{description.length > 180 && "..."}
    </p>
  </a>
  <div class="px-6 pt-4 pb-2">
    {
      tags.map((tag) => (
        <a
          href={`/tag/${slugify(tag)}`}
          class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 hover:bg-blue-200"
        >
          #{tag}
        </a>
      ))
    }
  </div>
</div>
