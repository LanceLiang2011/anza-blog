---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogCard from "../../components/BlogCard.astro";
import { getCollection, getEntry } from "astro:content";

const data = await getCollection("blog");
---

<BaseLayout title="Lige Leap with Anza">
  <h1 class="text-3xl font-bold text-center md:text-4xl lg:text-5xl">
    <span class="animate-wave inline-block origin-bottom-right mr-2"> ðŸ‘‹</span>
    Welcome to <span
      class="bg-gradient-to-br from-amber-300 via-orange-500 to-yellow-400 bg-clip-text text-transparent"
      >Life Leap with Anza</span
    >.
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 mt-24">
    {
      data.map((blog) => (
        <BlogCard
          title={blog.data.title}
          description={blog.data.description}
          tags={blog.data.tags}
          slug={blog.slug}
          cover={blog.data.image}
        />
      ))
    }
  </div>
</BaseLayout>
